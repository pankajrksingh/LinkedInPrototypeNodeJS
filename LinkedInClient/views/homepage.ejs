<div ng-controller="UserDetails" id="mainbody" ng-init="getUserDetail()">
		<div id="top-header">
				<div class="header-section first-child" layout="row" layout-align="center center">
					<input name="keywords" id="main-search-box" ng-model="searhUserValue" class="search-box" type="text" value="" placeholder="Search for people">
					<button ng-controller="UserActions" name="search" value="Search" ng-click="routeToSerchUser(searhUserValue)" class="search-button" type="submit">
						<span>Search</span>
					</button>
				</div>
		</div>
	  	<md-toolbar>
	    <h1 class="md-toolbar-tools">
	      <span></span>
  	      <md-button class="md-raised" ng-href="/#/home">Home</md-button>      
	      <md-button class="md-raised" ng-href="/#/connections">Connections</md-button>
	      <md-button class="md-raised" ng-href="/#/pendinguser">Pending Connections</md-button>
	      <md-button ng-controller="LoginController" class="md-raised logoutbutton" ng-click="logout()">Logout</md-button>

	    </h1>
	  	</md-toolbar>
		<div class="profilearea" layout="column">
			<div layout="row">
				<div layout="column">
				<img src="../images/profile_photo.png" height="220" width="200" >
				</div>
			<div>
				<h1>{{ Name }}<h1>
				<h>Last Login : {{ lastlogin }}</h>
			</div>
			</div>
		</div>
		<div class="componentArea">
		  	<md-toolbar>
		  		<h1> Summary </h1>
		  	</md-toolbar>
		  	<div class="components">
		  		<div layout="row">
			  		<p class="statement">{{ Summary }}</p>
			  		<button ng-controller="ProfileEdit" style="margin-top: 10px; margin-left: 30px" ng-click="summaryEdit($event, Summary)">Edit</button>
			  	</div>
		  	</div>
		</div>
		<div class="componentArea">
		  	<md-toolbar>
		  		<h1> Experience </h1>
		  	</md-toolbar>
		  	<div class="components">
		  		<div ng-repeat="experience in userExperience">
			  		<div layout="row">
		  				<h4>{{experience.company}}</h4>
			  			<button style="margin-top: 25px">Edit</button>
		  			</div>
		  			<h5>{{experience.position}}</h5>
		  			<h5>{{experience.from}} - {{experience.to}}</h5>
		  			<br>
		  		</div>
		  	</div>
		</div>		
		<div class="componentArea">
		  	<md-toolbar>
		  		<h1> Skills </h1>
		  	</md-toolbar>
		  	<div class="components">
		  		<div ng-repeat="skillset in SkillList">
		  			<div layout="row">
		  				<h5>{{skillset.skill}}</h5>
		  				<button style="margin-top: 18px">Edit</button>
		  			</div>
		  		</div>
		  	</div>
		</div>	
		<div class="componentArea">
		  	<md-toolbar>
		  		<h1> Education </h1>
		  	</md-toolbar>
		  	<div class="components">
		  		<div ng-repeat="eduList in EducationList">
		  			<div layout="row">
		  				<h4>{{eduList.institution}}</h4>
			  			<button style="margin-top: 25px">Edit</button>
		  			</div>
		  			<h5>{{eduList.degree}}</h5>
		  			<h5>{{eduList.from}} - {{eduList.to}}</h5>
		  			<br>
		  		</div>
		  	</div>
		</div>
</div>
