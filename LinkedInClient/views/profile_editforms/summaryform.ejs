<md-dialog ng-controller="ProfileEdit" aria-label="SummaryEdit" >
  <md-content class="sticky-container">
    <md-subheader class="md-sticky-no-effect">Edit Summary</md-subheader>
    <div class="dialog-content">
      <textarea rows="4" cols="50" ng-model="Summary"></textarea>
    </div>
  </md-content>
  <div class="md-actions" layout="row">
    <span flex></span>
    <md-button ng-click="cancel()">
     Cancel
    </md-button>
    <md-button ng-click="answer(Summary)" class="md-primary">
      Submit
    </md-button>
  </div>
</md-dialog>